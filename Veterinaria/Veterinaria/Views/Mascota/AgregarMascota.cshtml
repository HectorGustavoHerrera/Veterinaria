<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Ingreso de Mascota</h4>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-6 control-label">NombreMascota</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.NombreMascota1, htmlAttributes: new { @class = "from-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">NombreDueño</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.NombreDueño1, htmlAttributes: new { @class = "from-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Edad</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Edad1, htmlAttributes: new { @class = "from-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Telefono</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Telefono1, htmlAttributes: new { @class = "from-control" })
                    </div>
                </div>


                @*<div class="form-group">
                    <label class="col-sm-6 control-label">Sexo :</label>
