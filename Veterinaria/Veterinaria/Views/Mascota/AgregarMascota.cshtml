                        @Html.DropDownList("IdSexo", items, "Seleccione Sexo", htmlAttributes: new { @class = "from-control" })
                    </div>
                </div>*@


                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Guardar Mascota
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
